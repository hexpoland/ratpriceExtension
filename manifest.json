{
  "name": "Rational Price Extension",
  "version": "2.0",
  "description": "h3x wolaqu@poczta.onet.pl",
  "background": {
    "page": "background.html",
    // "scripts": ["jquery.min.js", "index.js", "smtp.js"],
    "persistent": false
  },
  "permissions": [
    "<all_urls>",
    "notifications",
    "background",
    "activeTab",
    "storage",
    "tabs",
    "contextMenus",
    "identity",
    "identity.email",
    "tts"
  ],
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "content_security_policy": "script-src 'self' https://apis.google.com/ https://*.firebaseio.com https://www.gstatic.com/ https://*.firebaseio.com https://www.googleapis.com; object-src 'self'",


  "browser_action": {
    "default_popup": "index.html"
  },
  "content_scripts": [{
    "matches": [
      "https://portal.rational-online.com/external/*"
    ],
    "js": ["index.js",
      "jquery.min.js"
    ]
  }],
  "manifest_version": 2
}