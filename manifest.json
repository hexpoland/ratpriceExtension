{
  "name": "Rational Price Extension",
  "version": "2.0",
  "description": "h3x wolaqu@poczta.onet.pl",
  "background": {
    "pages": ["index.html"],
    "scripts": ["background.js", "jquery.min.js", "index.js","smtp.js"],
    "persistent": false
  },
  "permissions": [
    "<all_urls>",
    "notifications",
    "background",
    "activeTab",
    "storage",
    "tabs",
    "contextMenus"
  ],
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },

  "browser_action": {
    "default_popup": "index.html"
  },
  "content_scripts": [{
    "matches": [
      "https://portal.rational-online.com/external/*"
    ],
    "js": ["jquery.min.js", "content.js"]
  }],
  "manifest_version": 2
}